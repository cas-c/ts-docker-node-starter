{
  "compilerOptions": {
    "esModuleInterop": true,
    "moduleResolution": "node",
    "noImplicitAny": true,
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*", "src/types/*"]
    },
    "target": "es2017",
    "lib": ["es2017", "dom"],
    "module": "commonjs"
  },
  "include": ["src/**/*"]
}
